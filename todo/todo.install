<?php
/**
 * @file
 * Install, update and uninstall functions for the
 * ToDo installation profile.
 */

/**
 * Implements hook_install().
 */
function todo_install() {
  // Fixes problems when the CSV files used for importing have been created
  // on a Mac, by forcing PHP to detect the appropriate line endings.
  ini_set('auto_detect_line_endings', TRUE);

  // TEXT FORMATS
  $filtered_html_format = _todo_install_get_filtered_html_format();
  filter_format_save($filtered_html_format);
  $full_html_format = _todo_install_get_full_html_format();
  filter_format_save($full_html_format);


  // ROLES & PERMISSIONS
  _todo_install_save_default_permissions($filtered_html_format);

  // MENU
  _todo_install_save_default_menu();
  menu_rebuild();

  // THEMES
  $theme_default = variable_get('theme_default', 'bartik');

  $theme_admin = 'seven';
  _todo_install_save_theme($theme_admin, 1);
  variable_set('admin_theme', $theme_admin);
  variable_set('node_admin_theme', TRUE);

  // TODO: Replace this with the site specific theme name when not Bartik!
  $theme_todo = $theme_default;
  if ($theme_todo !== $theme_default) {
    _todo_install_save_theme($theme_todo, 1);
    variable_set('theme_default', $theme_todo);
    // Disable Bartik
    _todo_install_save_theme($theme_default, 0);
  }

  // BLOCKS
  $admin_blocks = _todo_install_get_admin_theme_blocks($theme_admin);
  _todo_install_save_theme_blocks($admin_blocks);

  $todo_blocks = _todo_install_get_todo_theme_blocks($theme_todo);
  _todo_install_save_theme_blocks($todo_blocks);

  _todo_install_set_default_date_formats();


  // DATE & DATE FORMAT
  date_default_timezone_set('Europe/Brussels');
  variable_set('date_default_timezone', 'Europe/Brussels');
  variable_set('date_first_day', 1);
  _todo_install_set_default_date_formats();
}




/******************************************************************************
 * TEXT FORMATS (Default filters)
 ******************************************************************************/

/**
 * Get the filtered_html format.
 *
 * @param void
 *
 * @return stdCLass
 */
function _todo_install_get_filtered_html_format() {
  $filtered_html_format = array(
    'format' => 'filtered_html',
    'name' => 'Filtered HTML',
    'weight' => 0,
    'filters' => array(
      // URL filter.
      'filter_url' => array(
        'weight' => 0,
        'status' => 1,
      ),
      // HTML filter.
      'filter_html' => array(
        'weight' => 1,
        'status' => 1,
      ),
      // Line break filter.
      'filter_autop' => array(
        'weight' => 2,
        'status' => 1,
      ),
      // HTML corrector filter.
      'filter_htmlcorrector' => array(
        'weight' => 10,
        'status' => 1,
      ),
    ),
  );
  $filtered_html_format = (object) $filtered_html_format;

  return $filtered_html_format;
}

