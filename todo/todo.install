/**
 * Set the default time formats
 *
 * @param void
 *
 * @return array
 */
function _todo_install_set_default_date_formats() {
  $formats = array(
    // Default.
    'long'         => 'l, j F, Y - H:i',
    'medium'       => 'D, d/m/Y - H:i',
    'short'        => 'd/m/Y - H:i',

    // Reldate module.
    'day'          => 'l, j M',
    'time'         => 'H:i',
    'month_after'  => 'H:i j M, Y',
    'month_within' => 'H:i D j M',
  );

  foreach ($formats AS $type => $format) {
    variable_set('date_format_' . $type, $format);
  }

  return array(
    'success' => TRUE,
    'query' => st('Default date formats are set.')
  );
}




